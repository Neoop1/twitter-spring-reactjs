pipeline {
    agent any

    stages {
        stage('Checkout from Git'){
            steps{
                git branch: 'jenkins', url: 'https://github.com/Neoop1/twitter-spring-reactjs.git'
            }
        }
        stage('Security analysis  section') {
            steps {
                script{
                      load "./Devops/Jenkins/jenkinsfile_security"
                }
            }
        }
        stage('Java MVN tests section') {
            steps {
                script{
                      load "./Devops/Jenkins/jenkinsfile_mvntest"
                }
            }
        }
        stage('Docker Build Push section') {
            steps {
                script{
                      load "./Devops/Jenkins/jenkinsfile_Docker"
                }
            }
        }
    }
}